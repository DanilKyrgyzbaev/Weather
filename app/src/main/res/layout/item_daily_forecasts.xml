<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="10dp"
    android:background="#4DFFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/cludyIv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_cloud"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@id/dateTv"
        app:layout_constraintLeft_toLeftOf="@id/dateTv"
        app:layout_constraintTop_toBottomOf="@id/dateTv"/>

    <TextView
        android:id="@+id/tempTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12Â°"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@id/cludyIv"
        app:layout_constraintRight_toRightOf="@id/cludyIv"
        app:layout_constraintTop_toBottomOf="@id/cludyIv"/>

</androidx.constraintlayout.widget.ConstraintLayout>